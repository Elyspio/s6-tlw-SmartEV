{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "build",
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "include": [
    "src"
  ]
}